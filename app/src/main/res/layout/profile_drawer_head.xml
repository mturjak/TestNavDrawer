<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="@dimen/user_profile_margin_bottom"
    android:weightSum="1">

    <ImageView
        android:id="@+id/user_profile_img"
        android:layout_width="@dimen/user_profile_img_size"
        android:layout_height="@dimen/user_profile_img_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/user_profile_img_margin_top"
        android:layout_marginBottom="@dimen/user_profile_img_margin_bottom" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_img"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/drawer_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="@dimen/user_profile_name"
            android:textColor="#dddddd" />

        <ImageView
            android:id="@+id/drawer_profile_edit"
            android:layout_width="@dimen/user_profile_edit_ico_size"
            android:layout_height="@dimen/user_profile_edit_ico_size"
            android:layout_toRightOf="@+id/drawer_item_name"
            android:layout_toEndOf="@+id/drawer_item_name"
            android:padding="@dimen/drawer_item_ico_padding"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_item_ico" />

    </RelativeLayout>

</RelativeLayout>