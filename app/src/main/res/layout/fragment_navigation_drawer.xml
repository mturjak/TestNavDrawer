<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newtpond.testnavdrawer.DrawerActivity$PlaceholderFragment"
    android:background="#202121"
    android:layout_gravity="start" >

    <ImageView
        android:id="@+id/user_profile_pic"
        android:layout_width="@dimen/user_profile_img_size"
        android:layout_height="@dimen/user_profile_img_size"
        android:contentDescription="User Avatar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/user_profile_img_margin_top"
        android:layout_marginBottom="@dimen/user_profile_img_margin_bottom"
        android:src="@drawable/ic_launcher" />

    <com.newtpond.testnavdrawer.widget.CheckableLinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/user_menu"
        android:layout_below="@+id/user_profile_pic"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        tools:context=".NavigationDrawerFragment" />

</RelativeLayout>
